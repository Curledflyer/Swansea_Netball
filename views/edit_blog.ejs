    <title>Edit Blog</title>
    <link rel="stylesheet" href="styles/layout.css">
    <style>html {
      background-color: #e4e9fd;
      background-image: -webkit-linear-gradient(65deg, #a683e3 50%, #e4e9fd 50%);
      min-width: 100vw;
      font-family: "helvetica neue";
    }
   
    main {
      text-align: center;
      flex: 1 0 auto;
    }
    h1 {
      color: #fff;
      padding: 10px;
    }

    .blog_page {
      display: flex;
      flex-direction: column;
      justify-content:space-between;
   width: 100vw;
    }
    
    .box {
     flex-direction: column;
      background: white;
      border-radius: 5px;
      box-shadow: 5px 5px 15px -5px rgba(0, 0, 0, 0.3);
      max-width: 90vw;
      min-width: 80vw;
      margin-top: 5vh;
      margin-bottom: 5vh;

      flex-wrap: wrap;
    }
    
    #heading {
      background-color: #a683e3;
      text-align: center;
    }
    form.edit {
      display: flex;
    }
    
    .item {
      min-height: 70px;
      display: flex;
      align-items: center;
      border-bottom: 1px solid #f1f1f1;
    }
    
    .item:last-child {
      border-bottom: 0;
    }
    
    input[type="checkbox"] {
      margin: 20px;
      margin-left: 0;
    }
    
    p {
      margin: 0;
      padding: 20px 0;
      font-size: 20px;
      color: #00204a;
    }
    
    form {
      text-align: center;
      margin-left: 20px;
    }
    
    button.add {
      min-height: 50px;
      min-width: 50px;
      border-radius: 50%;
      border-color: transparent;
      background-color: #a683e3;
      color: #fff;
      font-size: 30px;
      border-width: 0;
      cursor: pointer;
    }
    
    button.edit {
      margin-left: 0px;
      margin-right: 20px;
      border: none;
      background: none;
      cursor: pointer;
    }
    
    .icon {
      height: 20px;
    }
    
    input[type="text"] {
      text-align: left;
      height: 60px;
      top: 10px;
      border: none;
      background: transparent;
      font-size: 20px;
      font-weight: 200;
      width: 80%;
    }
    
    input[type="text"]:focus {
      outline: none;
      box-shadow: inset 0 -3px 0 0 #a683e3;
    }
    
    ::placeholder {
      color: lightgray;
      opacity: 1;
    }

    .input_box {
      width: auto;
      flex-wrap: wrap;
    }
   
    </style>
